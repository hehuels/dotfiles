addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

# ALIAS
alias watch='watch '
alias sudo='sudo '
alias vi='nvim'
alias vim='nvim'

# env
export EDITOR='nvim'

# keybindings
bindkey -s ^f "tmux-sessionizer\n"

# PATH
addToPathFront "$HOME/.local/scripts"

if [[ $(uname) -eq "Darwin" ]]; then
    addToPathFront "$HOME/Library/Python/3.9/bin/"
fi
